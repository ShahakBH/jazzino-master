<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd" updateCheck="false">

    <diskStore path="java.io.tmpdir/GameServerCache"/>

    <defaultCache eternal="false" maxElementsInMemory="1000"
                  overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="0"
                  timeToLiveSeconds="600" memoryStoreEvictionPolicy="LRU"/>

    <cache name="profileInformationCache" eternal="false"
           maxElementsInMemory="10000" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="60"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="globalPlayersCache" eternal="false"
           maxElementsInMemory="100" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="10"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="levelInfoCache" eternal="false"
           maxElementsInMemory="10000" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="60"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="achievementInfoCache" eternal="false"
           maxElementsInMemory="10000" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="60"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="playerAchievementCache" eternal="false"
           maxElementsInMemory="10000" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="60"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="achievementDetailsCache" eternal="false"
           maxElementsInMemory="50" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="600"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="levelCache" eternal="false"
           maxElementsInMemory="10000" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="60"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="locationDetailsCache" eternal="false"
           maxElementsInMemory="10000" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="86400"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="playerDetailsCache" eternal="false"
           maxElementsInMemory="10000" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="600"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="balanceSnapshotCache" eternal="false"
           maxElementsInMemory="10000" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="60"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="sessionStatusCache" eternal="false"
           maxElementsInMemory="10000" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="0"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="gameTypeCache"
           eternal="false"
           maxElementsInMemory="1000"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="60"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="gameConfigurationAliasCache" eternal="false"
           maxElementsInMemory="300" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="30"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="gameConfigurationCache" eternal="false"
           maxElementsInMemory="1" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="30"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="countriesCache" eternal="false"
           maxElementsInMemory="600" overflowToDisk="false" diskPersistent="false"
           timeToIdleSeconds="0" timeToLiveSeconds="1200" memoryStoreEvictionPolicy="LRU"/>

    <!-- registration limit -->
    <cache name="registrationsPerIpCache"
           eternal="false"
           maxElementsInMemory="10000"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="3600"
           memoryStoreEvictionPolicy="LRU"/>

    <!-- hasPromotions lookup-->
    <cache name="hasPromotionCache"
           eternal="false"
           maxElementsInMemory="10000"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="360"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="countryRepositoryCache"
           eternal="false"
           maxElementsInMemory="1000"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="300"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="preferredCurrencyCache"
           eternal="false"
           maxElementsInMemory="1000"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="600"
           memoryStoreEvictionPolicy="LRU" />

    <cache name="acceptedCurrencyCache"
           eternal="false"
           maxElementsInMemory="200"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="600"
           memoryStoreEvictionPolicy="LRU" />

    <cache name="topUpStatusCache"
           eternal="false"
           maxElementsInMemory="10000"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="3600"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="tournamentViewCache"
           eternal="false"
           maxElementsInMemory="100"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="1"
           memoryStoreEvictionPolicy="LRU" />

    <cache name="pictureCache"
           eternal="false"
           maxElementsInMemory="10000"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="600"
           memoryStoreEvictionPolicy="LRU" />

    <cache name="giftingStatusCache"
           eternal="false"
           maxElementsInMemory="10000"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="30"
           memoryStoreEvictionPolicy="LRU" />

    <cache name="giftCache"
           eternal="false"
           maxElementsInMemory="10000"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="30"
           memoryStoreEvictionPolicy="LRU" />

    <cache name="giftPeriodCache"
           eternal="false"
           maxElementsInMemory="1"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="30"
           memoryStoreEvictionPolicy="LRU" />

    <cache name="giftingPromotionsCache"
           eternal="false"
           maxElementsInMemory="20000"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="30"
           memoryStoreEvictionPolicy="LRU" />

</ehcache>
