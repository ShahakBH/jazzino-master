<?xml version="1.0"?>
<toolbox>
	<tool>
		<key>esc</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.EscapeTool</class>
	</tool>
	<tool>
        <key>list</key>
        <scope>application</scope>
        <class>org.apache.velocity.tools.generic.ListTool</class>
	</tool>
	<tool>
        <key>date</key>
        <scope>application</scope>
        <class>org.apache.velocity.tools.generic.DateTool</class>
	</tool>
    <tool>
        <key>errorsTool</key> <!-- Not a nice name but used to avoid conflicts with the error object -->
        <scope>application</scope>
        <class>com.yazino.spring.mvc.velocity.ErrorsTool</class>
    </tool>

</toolbox>