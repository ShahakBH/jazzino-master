#set($redirectTo='/wheelDeal/play')
<div id="how-to-play" class="SLOTS game-home">
    <div id="how-to-play-area">
        <div class="content_head"><h3 class="font-grey-window-head">SLOTS WHEEL DEAL</h3></div>
        <div class="content_delimiter"></div>
        <div class="content">
            <img src="$assetUrl/images/games/SLOTS/logo.jpg" alt="Slots Wheel Deal logo">

            <h4>
                The world's first free,<br>
                multiplayer, casino slot with<br>
                the added excitement of a game<br>
                show!
            </h4>

            <div class="links">
                #generateLinkTagForMainCta("slots" $redirectTo)

                <a href="http://itunes.apple.com/us/app/yazino-slots/id422074428" title="Download on the AppStore">
                    <img src="$assetUrl/images/games/SLOTS/appstore-ios.png">
