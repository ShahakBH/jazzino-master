    <div id="how-to-play-area">
        <div id="grey-window">
            <div id="grey-window-head"><h3 class="font-grey-window-head">HIGH STAKES - HOW TO PLAY & RULES</h3></div>
            <div id="grey-window-center">
                <div id="grey-window-body">
                    <div class="block1">
                        <div class="float-right-col">
                            <div id="back-to-games">
                                <a href="${request.contextPath}/highStakes"
                                   class="font-how-to-play-back-game uppercase">Back to High Stakes</a>
                            </div>
                        </div>
                        <div class="left-col">
                            <h4 class="colour-HIGH_STAKES font-compnonlogged-texthead">
                                HOW TO PLAY HIGH STAKES AT YAZINO
                            </h4>

                            <div class="paragraph1 font-compnonlogged-1">
                                <p>Experience a thrilling, multiplayer slots game where you compete with others in the
                                    risky and glamourous world of an international heist.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="divider"></div>
                    <script type="text/javascript">
                        #if ($!canvas)
                            #set($movieWidth= '671px')
                            #set($movieHeight = '428px')
                        #else
                            #set($movieWidth= '824px')
                            #set($movieHeight = '525px')
                        #end
                        $(document).ready(function() {
                            swfobject.embedSWF(
                                "$!clientUrl/videos/highStakesPromo.swf",
                                "tutorial",
