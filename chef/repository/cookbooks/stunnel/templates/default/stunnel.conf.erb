# NOTE: This file is being generated by chef (sysctl cookbook).
#       Any changes will be overwritten on the next run!

options = NO_SSLv2
options = CIPHER_SERVER_PREFERENCE
cert = /etc/stunnel/cert-chain.pem
key = /etc/stunnel/cert.key
renegotiation = no
fips = no
ciphers = ECDHE-RSA-AES128-SHA256:AES128-GCM-SHA256:RC4:HIGH:!MD5:!aNULL:!EDH
setuid = root
setgid = root
#setuid = stunnel
#setgid = stunnel
#chroot = /var/lib/stunnel
pid = /var/run/stunnel.pid
socket = l:TCP_NODELAY=1
socket = r:TCP_NODELAY=1
#output = /var/log/stunnel.log

# max number of cached session
sessionCacheSize = 15000

# number of seconds to keep cached sessions for
sessionCacheTimeout = 600


[httpsv6]
        accept = <%= @listen_ipv6 %>:<%= @listen_port %>
        connect = ::1:<%= @redirect_port %>
        xforwardedfor = yes
        TIMEOUTclose = 0
        TIMEOUTbusy = 20
        TIMEOUTconnect = 20
        TIMEOUTidle = 120

[httpsv4]
        accept = <%= @listen_ipv4 %>:<%= @listen_port %>
        connect = 127.0.0.1:<%= @redirect_port %>
        xforwardedfor = yes
        TIMEOUTclose = 0
        TIMEOUTbusy = 20
        TIMEOUTconnect = 20
        TIMEOUTidle = 120

