<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id="Server" class="org.eclipse.jetty.server.Server">

    <Ref refid="Rewrite">

        <Call name="addRule">
            <Arg>
                <New class="org.eclipse.jetty.rewrite.handler.RewriteRegexRule">
                    <Set name="regex">/strata.server.lobby.gameserver/(.*)</Set>
                    <Set name="replacement">/game-server/$1</Set>
                </New>
            </Arg>
        </Call>

        <Call name="addRule">
            <Arg>
                <New class="org.eclipse.jetty.rewrite.handler.RedirectRegexRule">
                    <Set name="regex">/config/ios/(.*)</Set>
                    <Set name="replacement">/mobile-ws/ios/bootstrap/1.0/$1</Set>
                </New>
            </Arg>
        </Call>

        <Call name="addRule">
            <Arg>
                <New class="org.eclipse.jetty.rewrite.handler.RedirectRegexRule">
                    <Set name="regex">/strata.server.lobby.promotion/(.*)</Set>
                    <Set name="replacement">/bi-promotion/$1</Set>
                </New>
            </Arg>
        </Call>

    </Ref>

</Configure>
