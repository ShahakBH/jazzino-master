# .bash_profile
# This file is created by Chef using 'bash' cookbook

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
    . ~/.bashrc
fi

# User specific environment and startup programs
PS1="\[\033[36m\]\u\[\033[34m\]@\[\033[32m\]\h\[\033[36m\]:\[\033[34m\]\w\[\033[32m\] \\$\[\033[0m\] "
PATH=$PATH:$HOME/bin

export PS1
export PATH

