<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:os-core="http://www.openspaces.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.openspaces.org/schema/core http://www.openspaces.org/schema/core/openspaces-core.xsd">

    <os-core:giga-space-context/>
    <os-core:space id="space" url="/./space" lookup-groups="account-repository-integration-test"/>
    <os-core:giga-space id="localGigaSpace" space="space" tx-manager="transactionManager"/>
    <os-core:giga-space id="globalGigaSpace" space="space" clustered="true"/>
    <os-core:local-tx-manager id="transactionManager" space="space"/>

    <bean class="com.yazino.platform.grid.Routing"/>

</beans>
